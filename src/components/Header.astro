<header>
  <nav>
    <a class="root" href="/">sleepyfran.me</a>
    <span class="separator">/</span>
    <div class="items">
      <a href="/projects">app/games</a>
      <a href="/blog">blog</a>
      <a href="/music">music</a>
    </div>
  </nav>
</header>
<style>
  header {
    padding: 1.8rem 0;
    width: 100%;
  }

  header nav {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 3rem;
    line-height: 1rem;
  }

  header nav .items {
    display: flex;
    gap: 2rem;
  }

  .separator {
    font-weight: 200;
  }

  a.root {
    font-weight: 200;
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.5s ease-in-out;
  }

  a.root:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 500px) {
    header nav {
      flex-direction: column;
      gap: 0.5rem;
    }

    header nav .items {
      align-items: flex-start;
      width: 100%;
    }

    a.root {
      align-self: flex-start;
      font-weight: bold;
      color: var(--link-color);
    }

    .separator {
      display: none;
    }
  }
</style>
